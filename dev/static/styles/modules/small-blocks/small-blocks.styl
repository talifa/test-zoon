.card {
    width: 100%;
    height: 85px;
    border-radius: 4px;
    background-color: $indigo;
    position: relative;
    margin-top: 5px;
    max-width: 260px;
    transition: 0.2s;

    &:not(:last-child) {
        margin-right: 5px;
    }

    &:hover {
        opacity: 0.9;
    }

    @media (max-width: 948px) {
        margin-right: 0px !important;
    }

    @media (max-width: 768px) {
        // width: 100% !important;
        max-width: none;
    }

    .link {
        display: block;
        height: 100%;
        width: 100%;
        color: inherit;

        &:hover {
        }
    }

    .card-counter {
        padding: 20px 15px;
    }

    .counter {
        font-size: 25px;
        font-weight: bold;
    }

    .card_icon {
        width: 50px;
        height: 50px;
        position: absolute;
        top: 20px;
        right: 15px;

        // margin-top: 20px;
        // margin-right: 15px;
        svg {
            width: 100%;
            height: 100%;
            fill: #58329e;
        }
    }
}

.row {
    // height: 131px;
    border-radius: 4px;
    border: solid 1px $lightgrey;
    color: $black;
    border-left: solid 4px $indigo;
    position: relative;
    min-height: 130px;
    transition: 0.2s;

    &:not(:last-child) {
        margin-bottom: 10px;
    }

    padding: 15px 25px;

    &:hover {
        box-shadow: 0 0 8px rgba(33, 33, 33, 0.2);
    }

    .row-menu {
        position: absolute;
        top: 10px;
        right: 9px;
        padding: 10px;
        cursor: pointer;

        &:hover .row-menu__list {
            // display: block;
        }

        &:hover .row-menu__icon span {
            background-color: $indigo;
        }

        span {
            display: block;
            width: 4px;
            height: 4px;
            background-color: #cfd5db;
            border-radius: 50%;
            transition: 0.5s;

            &:not(:last-child) {
                margin-bottom: 4px;
            }
        }

        .row-menu__list {
            position: absolute;
            padding: 15px 20px;
            border: solid 1px #e8e8e8;
            background-color: #ffffff;
            border-radius: 4px;
            right: -17px;
            top: 44px;
            z-index: 100;
            display: none;
            transition: all 0.5s linear;

            &:hover {
                display: block;
            }

            &:before {
                content: '';
                display: block;
                width: 15px;
                height: 15px;
                position: absolute;
                top: -8px;
                right: 20px;
                transform: rotate(45deg);
                border: solid 1px #e8e8e8;
                border-right: none;
                border-bottom: none;
                background-color: #ffffff;
            }

            .link {
                opacity: 0.8;
                font-size: 16px;
                color: $indigo;

                &:hover {
                    opacity: 1;
                }
            }
        }
    }

    .row-status__bar {
        position: absolute;
        bottom: 15px;
        right: 25px;

        @media (max-width: 714px) {
            position: static;
        }

        .link {
            color: $indigo;
            opacity: 0.8;

            &:hover {
                opacity: 1;
            }
        }

        .row-status__bar_status {
            font-size: 13px;
            color: $white;
            padding: 5px 10px;
            border-radius: 4px;
            background-color: $yellow;
            max-width: 146px;

            svg {
                width: 12px;
                height: 14.2px;
                fill: $white;
                margin-right: 5px;
            }

            &.row-status__bar_status--orange {
                span {
                }
            }
        }
    }

    .row-tech {
        position: absolute;
        bottom: 15px;
        display: flex;
        align-items: center;

        @media (max-width: 414px) {
            position: static;
            flex-direction: column;
            align-items: flex-start;
        }

        @media (max-width: 714px) {
            margin: 10px 0;
            position: static;
        }

        .row-tech__carma {
            margin-right: 10px;
            display: flex;
            align-items: center;
            color: $grey;
            min-width: 68px;

            @media (max-width: 414px) {
                font-size: 16px;
                margin: 10px auto;
            }

            svg {
                fill: $grey;
                width: 16px;
                height: 17px;
                margin-right: 5px;
            }

            &:before {
            }

            &.row-tech__carma--gold {
                color: $yellow;
                font-weight: 700;

                svg {
                    fill: $yellow;
                }
            }

            .search-counter {
                padding-left: 5px;

                &:after {
                    content: '...';
                    display: inline-block;
                    // width: 100%;
                }
            }
        }

        .row-tech__review {
            @media (max-width: 414px) {
                font-size: 12px;
                margin: 5px 0;
            }

            &:before {
                content: '';
                display: inline-block;
                vertical-align: middle;
                margin: 0 5px;
                width: 3px;
                height: 3px;
                border-radius: 50%;
                background-color: $black;
            }
        }
    }

    .row_header {
        display: flex;
        align-items: center;
        margin-bottom: 10px;

        .row-header__h3 {
            font-size: 16px;
            margin-right: 10px;
        }

        .row-header__list li {
            display: inline-block;
            color: $grey;

            &:before {
                content: '';
                display: inline-block;
                vertical-align: middle;
                margin: 0 5px;
                width: 3px;
                height: 3px;
                border-radius: 50%;
                background-color: $grey;
            }
        }
    }

    .row_stat-group {
        margin-bottom: 40px;
        margin-top: 10px;

        .row-stat-group__stat-list {
            .stat {
                display: inline-block;
                border-radius: 4px;
                border: solid 1px $lightgrey;
                padding: 7px 10px;

                &.active {
                    background-color: $indigo;
                    color: $white;

                    svg {
                        stroke: $white;
                    }
                }

                &.row-stat-group__stat--create {
                    svg {
                        width: 12px;
                        height: 16.5px;
                        stroke-width: 0;
                    }
                }

                &:not(:last-child) {
                    margin-right: 15px;
                }

                @media (max-width: 514px) {
                    display: flex;
                    // flex-direction: column;
                    margin: 3px 0 !important;
                }

                @media (max-width: 768px) {
                    // display: flex;
                    // flex-direction: column;
                    margin: 0 !important;
                }

                svg {
                    // fill: $black;
                    margin-right: 5px;
                    width: 8.8px;
                    height: 10px;
                    // object-fit: contain;
                    // border: solid 1px #222222;
                    stroke: #222;
                    stroke-width: 1;
                }
            }
        }
    }
}

.bottom-screen__row--inactive {
    color: $grey;
    border-left: 4px solid $grey;
    min-height: 70px;
}

.bottom-screen__row--half-active {
    // color: $grey;
    border-left: 4px solid $grey;
}
